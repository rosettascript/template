{
  "name": "multisys",
  "version": "1.0.0",
  "description": "Full-stack TypeScript application with React and Node.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "lint": "npm run lint:server && npm run lint:client",
    "lint:server": "cd server && npm run lint",
    "lint:client": "cd client && npm run lint",
    "lint:fix": "npm run lint:fix:server && npm run lint:fix:client",
    "lint:fix:server": "cd server && npm run lint:fix",
    "lint:fix:client": "cd client && npm run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "npm run type-check:server && npm run type-check:client",
    "type-check:server": "cd server && npm run type-check",
    "type-check:client": "cd client && npm run type-check",
    "setup": "npm install && npm run setup:server && npm run setup:client",
    "setup:server": "cd server && npm install",
    "setup:client": "cd client && npm install",
    "migrate": "cd server && npm run migrate",
    "seed": "cd server && npm run seed",
    "optimize": "cd server && npm run optimize",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd server && npm run test",
    "test:client": "cd client && npm run test",
    "test:coverage": "npm run test:coverage:server && npm run test:coverage:client",
    "test:coverage:server": "cd server && npm run test:coverage",
    "test:coverage:client": "cd client && npm run test:coverage",
    "docker:build": "cd deployment && docker-compose build",
    "docker:up": "cd deployment && docker-compose up -d",
    "docker:down": "cd deployment && docker-compose down",
    "docker:dev": "cd deployment && docker-compose -f docker-compose.dev.yml up -d",
    "docker:monitoring": "cd deployment && docker-compose -f docker-compose.yml -f docker-compose.monitoring.yml up -d",
    "clean": "npm run clean:server && npm run clean:client",
    "clean:server": "cd server && rm -rf node_modules dist",
    "clean:client": "cd client && rm -rf node_modules dist"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "typescript",
    "react",
    "nodejs",
    "express",
    "postgresql",
    "fullstack"
  ],
  "author": "Your Name",
  "license": "MIT"
}
