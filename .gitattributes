# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout
*.js text
*.jsx text
*.ts text
*.tsx text
*.json text
*.md text
*.yml text
*.yaml text
*.xml text
*.html text
*.css text
*.scss text
*.sass text
*.less text
*.sql text
*.sh text
*.bash text
*.zsh text
*.fish text
*.ps1 text
*.bat text
*.cmd text

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Declare files that will always have LF line endings on checkout
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.fish text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.rar binary
*.7z binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Package files
*.tgz binary
*.tar binary

# Archive files
*.zip binary
*.tar.gz binary
*.tar.bz2 binary
*.rar binary
*.7z binary

# Image files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.bmp binary
*.tiff binary
*.ico binary
*.svg binary

# Font files
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary

# Video files
*.mp4 binary
*.avi binary
*.mov binary
*.wmv binary
*.flv binary
*.webm binary

# Audio files
*.mp3 binary
*.wav binary
*.flac binary
*.aac binary
*.ogg binary

# Document files
*.pdf binary
*.doc binary
*.docx binary
*.xls binary
*.xlsx binary
*.ppt binary
*.pptx binary

# Database files
*.db binary
*.sqlite binary
*.sqlite3 binary

# Executable files
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.app binary

